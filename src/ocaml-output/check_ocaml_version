
min_ver=4.02.2

if echo 'if Sys.ocaml_version >= "$min_ver" then exit 0 else exit 1' | ocaml -noinit -noprompt -stdin; then
    echo "Installed OCaml recent enough (version larger than $min_ver)"
else
    echo "ERROR: Installed OCaml too old (need version larger than $min_ver)"
    exit 1
fi
