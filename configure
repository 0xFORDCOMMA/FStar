#!/bin/bash

fetch_everest_if ()
{
  if ! [ -d everest ]; then
    git clone https://github.com/project-everest/everest --depth 1
  else
    (cd everest && git pull)
  fi
}

if [ -z "$KREMLIN_HOME" ]; then
  fetch_everest_if > config.log 2>&1
  everest/everest kremlin pull make > config.log 2>&1
  echo export KREMLIN_HOME=$(pwd)/everest/kremlin
fi
